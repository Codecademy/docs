{
  "name": "codecademy-docs",
  "dependencies": {
    "front-matter": "^4.0.2",
    "glob": "^7.1.7"
  },
  "devDependencies": {
    "@codecademy/eslint-config": "^3.1.0",
    "@codecademy/prettier-config": "^0.2.0",
    "@codecademy/tsconfig": "^0.3.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.34.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "markdownlint-cli": "^0.34.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "*.md": [
      "npm run format",
      "markdownlint"
    ]
  },
  "scripts": {
    "compile": "tsc --noEmit",
    "format": "prettier --ignore-path .prettierignore --write",
    "format:md": "prettier --ignore-path .prettierignore --write \"./**/*.(md)\"",
    "format:all": "prettier --ignore-path .prettierignore --write \"./**/*.(ts|md)\"",
    "format:verify": "prettier \"./**/*.(ts|md)\" --list-different",
    "lint:js": "eslint \"./**.ts\" --max-warnings 0 ",
    "lint:md": "markdownlint \"./content/**/*.md\"",
    "lint": "yarn lint:md && yarn lint:js",
    "test": "jest",
    "prepare": "husky install"
  },
  "license": "UNLICENSED",
  "version": "1.0.0"
}
